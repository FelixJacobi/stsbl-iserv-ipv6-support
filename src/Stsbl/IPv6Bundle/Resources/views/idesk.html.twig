{# src/Stsbl/IPv6Bundle/Resources/views/idesk.html.twig #}
{% extends "IServCoreBundle:IDesk:main.html.twig" %}

{% block idesk_heading_panel %}
    {% if action == 'pending' or action == 'wrong_ip' %}
        {% set title = ico('globe-green', 'fugue') ~ _('Internet access requested') %}
    {% else %}
        {% set title = ico('globe-green', 'fugue') ~ _('Request internet access') %}
    {% endif %}
    <div class="panel-heading">
        {{ title|raw }}
    </div>
{% endblock %}

{% block idesk_class %}panel-warning{% endblock %}

{% block idesk_content %}
    <p>
        {% if action == 'pending' %}
            {{ _('You have already filed a request to add this computer to the computer management.') }}
        {% elseif action == 'wrong_ip' %}
            {{ _('Your request for internet access has been granted, but your computer isn\'t using the assigned IP address yet. Instruct your computer to renew its DHCP lease; If you don\'t know how to do this, just reboot it. You should then be able to access the internet.') }}
        {% else %}
            {{ _('This computer is not registered in the computer management which could result in you not being able to access the internet. Request your computer to be added to remedy this. IServ currently cannot query required information about your host. Please click the button below to reload the start page to request internet access.') }}
        {% endif %}
    </p>
{% endblock %}

{% block idesk_footer %}
    {% if action != 'pending' and action != 'wrong_ip' %}
        <div class="clearfix">
            <a href="{{ link }}" class="btn btn-link pull-right">{{ icon('refresh') }}{{ _('Reload start page to request internet access') }}</a>
        </div>
    {% endif %}
{% endblock %}
